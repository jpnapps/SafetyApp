<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"

	android:padding="25dp"
	android:id="@+id/top_rlay"
				android:layout_width="match_parent"
				 android:layout_height="match_parent"
	android:background="@color/transparent_black7"
	android:orientation="vertical"

	>

	<androidx.cardview.widget.CardView

		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"

		app:cardCornerRadius="6dp"
		app:cardElevation="4dp"
		app:cardMaxElevation="6dp"
		app:contentPadding="10dp">

		<LinearLayout
			android:id="@+id/inner_top_llay"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"

			android:layout_centerInParent="true"

			android:orientation="vertical"
			android:padding="0dp">

			<RelativeLayout
				android:id="@+id/close_rlay"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"

				android:layout_marginTop="10dp"
				android:visibility="visible"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent">

		<!--		<com.jpndev.portfolio.custom.DeviceFitImageView
					android:id="@+id/right_imv"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_alignParentRight="true"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:layout_marginRight="4dp"

					android:src="@drawable/ic_close_24"
					android:visibility="visible"
					app:width_percentage="8" />-->
				<!--	<include
						android:id="@+id/include"
						layout="@layout/actionbar_white_three_text_image_close"></include>-->
			</RelativeLayout>

			<TextView
				android:id="@+id/text1_txv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_margin="5dp"
				android:gravity="center_horizontal"
				android:padding="10dp"
				android:text="PItem saved successfully"

				 />

			<TextView
				android:id="@+id/text2_txv"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_centerInParent="true"
				android:layout_marginTop="15dp"
				android:gravity="center_horizontal"
				android:padding="10dp"

				android:textColor="@color/black"

				android:visibility="gone"
			/>

			<androidx.cardview.widget.CardView
				android:id="@+id/ok_cview"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20dp"
				android:layout_marginTop="20dp"
				android:layout_marginRight="20dp"
				android:orientation="vertical"

				app:cardCornerRadius="20dp"

				app:cardElevation="3dp"
				app:cardMaxElevation="4dp"
				app:contentPadding="4dp"
				app:layout_constraintTop_toBottomOf="@+id/action_bar_rlay">

				<TextView
					android:id="@+id/ok_txv"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"

					android:layout_centerInParent="true"
					android:gravity="center_horizontal"
					android:padding="8dp"
					android:text="OK"

				/>
			</androidx.cardview.widget.CardView>


			<View
				android:layout_width="match_parent"
				android:layout_height="30dp" />

		</LinearLayout>
	</androidx.cardview.widget.CardView>
</RelativeLayout>
